{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "customer": {
        "clusterId": "customer",
        "match": {
          "path": "customer/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "product": {
        "clusterId": "product",
        "match": {
          "path": "product/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "customer": {
        "destinations": {
          "customer1": {
            "address": "https://localhost:7169"
          }
        }
      },
      "product": {
        "destinations": {
          "product1": {
            "address": "https://localhost:7198"
          }
        }
      }
    }
  }
}
